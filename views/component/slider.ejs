<section id="slider">
    <!--slider-->
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div id="slider-carousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">
                        <li data-target="#slider-carousel" data-slide-to="0" class="active"></li>
                        <li data-target="#slider-carousel" data-slide-to="1"></li>
                        <li data-target="#slider-carousel" data-slide-to="2"></li>
                    </ol>

                    <div class="carousel-inner">
                        <% for (var i = 0; i < banner.length; i++) { %>
                            <% if (i == 0) { %>
                                <div class="item active">
                                    <div class="col-sm-6">
                                        <h1>PANDAS<span>-VOUCHER SHOP</span></h1>
                                        <!-- <h2><%= banner[i].voucher.price %></h2> -->
                                        <p><%= banner[i].voucher.name %></p>
                                        <a href="./detail?id=<%= banner[i].voucher._id %>"><button type="button" class="btn btn-default get">Chi tiết</button></a>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="<%= banner[i].voucher.image[0] %>" style="height: 400px; width: 520px;" class="girl img-responsive" alt="" />
                                        <img src="images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            <% } else {%>
                                <div class="item">
                                    <div class="col-sm-6">
                                        <h1><span>PANDAS</span>-VOUCHER SHOP</h1>
                                        <!-- <h2><%= banner[i].voucher.price %></h2> -->
                                        <p><%= banner[i].voucher.name %></p>
                                        <a href="./detail?id=<%= banner[i].voucher._id %>"><button type="button" class="btn btn-default get">Chi tiết</button></a>
                                    </div>
                                    <div class="col-sm-6">
                                        <img src="<%= banner[i].voucher.image[0] %>" style="height: 400px; width: 520px;" class="girl img-responsive" alt="" />
                                        <img src="images/home/pricing.png" class="pricing" alt="" />
                                    </div>
                                </div>
                            <% } %>
                        <% } %>
                    </div>

                    <a href="#slider-carousel" class="left control-carousel hidden-xs" data-slide="prev">
                        <i class="fa fa-angle-left"></i>
                    </a>
                    <a href="#slider-carousel" class="right control-carousel hidden-xs" data-slide="next">
                        <i class="fa fa-angle-right"></i>
                    </a>
                </div>

            </div>
        </div>
    </div>
</section>