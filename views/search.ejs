<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Search | Pandas Voucher</title>
    <%- include component/cdn.ejs %>
</head><!--/head-->

<body>
    <%- include component/header.ejs %>
	
    <div class="searchPage">
        <section id="advertisement">
            <div class="container">
                <img src="images/shop/advertisement.jpg" alt="" />
            </div>
        </section>
        
        <section>
            <div class="container">
                <div class="row">
                    <div class="col-sm-3">
                        <%- include component/left-sidebar.ejs %>
                    </div>
                    
                    <div class="col-sm-9 padding-right">
                        <div class="features_items">
                            <!--features_items-->
                            <h2 class="title text-center">Sản phẩm</h2>
                            <% vouchers.forEach(v => { %>
                                <div class="col-sm-4">
                                    <div class="product-image-wrapper">
                                        <div class="single-products">
                                            <div class="productinfo text-center">
                                                <img src="<%= v.image[0] %>" alt="<%= v.name %>" width="200px" height="220px"/>
                                                <h2><%= v.price.toLocaleString() %>đ</h2>
                                                <p style="height: 80px;"><%= v.name %></p>
                                                <a href="#" class="btn btn-default add-to-cart"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                                            </div>
                                            <a href="/detail?id=<%= v._id %>">
                                                <div class="product-overlay">
                                                    <div class="overlay-content">
                                                        <h2><%= v.price.toLocaleString() %>đ</h2>
                                                        <p style="height: 80px;"><%= v.name %></p>
                                                        <% if (locals.user !== undefined) { %>
                                                            <a class="btn btn-default add-to-cart add-to-cart-show-hover-search" data-user="<%= user._id %>" data-voucher="<%= v._id %>"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                                                        <% } else { %>
                                                            <a class="btn btn-default add-to-cart add-to-cart-show-hover-search" data-user="" data-voucher="<%= v._id %>"><i class="fa fa-shopping-cart"></i>Thêm vào giỏ hàng</a>
                                                        <% } %>
                                                    </div>
                                                </div>
                                            </a>
                                        </div>
                                        <div class="choose">
                                            <ul class="nav nav-pills nav-justified">
                                                <% if (locals.user !== undefined) { %>
                                                    <li style="cursor: pointer;" onclick="addProductIntoFavorite(this)" data-user="<%= user._id %>" data-product="<%= v._id %>"><a><i class="fa fa-plus-square"></i>Ưa thích</a></li>
                                                <% } else { %>
                                                    <li style="cursor: pointer;" onclick="addProductIntoFavorite(this)" data-user="" data-product="<%= v._id %>"><a><i class="fa fa-plus-square"></i>Ưa thích</a></li>
                                                <% } %>
                                                <li><a href=""><i class="fa fa-plus-square"></i>So sánh</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            <% }) %>
                        </div>
                        <!--features_items-->
                        <!-- pagination -->
                    </div>
                </div>
            </div>
        </section>
    </div>
	
	<%- include component/footer.ejs %>
    <!--/Footer-->

    <%- include component/message-alert.ejs %>
</body>
</html>