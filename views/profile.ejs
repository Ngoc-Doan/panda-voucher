                  <button type="button" class="btn btn-default" data-dismiss="modal" onclick="handleBlockDataInputPass(this)">Đóng</button>
                  <button type="button" class="btn btn-primary" id="btn-update-password-user-modal" style="margin-bottom: 16px;">
                    <i class="fa fa-spinner fa-spin" style="display: none;"></i> Cập nhật
                  </button>
                </div>
              </div>
              
            </div>
        </div>
    </div>

    <%- include component/footer.ejs %>

    <%- include component/message-alert.ejs %>
</body>
<script>
    function handleDataIntoModal(element) {
        const user = element.dataset.id
        $('.profilePage #update-avatar-user-admin-modal').attr('data-user', user)
    }
    function handleDataUpdatePassIntoModal(element) {
        const user = element.dataset.id
        $('.profilePage #update-password-user-modal').attr('data-user', user)
    }
    function handleCloseImgAvatar(element) {
        $('.profilePage .show-image-upload').html("")
    }
    function handleBlockDataInputPass(element) {
        $('.profilePage #update-password-user-modal .modal-body #old_password').val("")
        $('.profilePage #update-password-user-modal .modal-body #new_password').val("")
        $('.profilePage #update-password-user-modal .modal-body #re_password').val("")
    }
    function readURL(input) {
        if (input.files) {
        var filesAmount = input.files.length
        console.log(filesAmount)
        for (var i = 0; i < filesAmount; i++) {
            var reader = new FileReader();

            reader.onload = (event) => {
            $('.profilePage .show-image-upload').html(`
            <div class="edit-review-upload-block" onclick="removeImg(this)">
                <i class="fas fa-times"></i>
                <img src="${event.target.result}" class="edit-review-upload">
            </div>
            `)
            }
            reader.readAsDataURL(input.files[i]);
        }
        }
    }

    function removeImg(element) {
        element.remove()
        $('#img-upload-input').val("")
    }

    $(document).ready(() => {

        $('.profilePage #btn-update-password-user-modal').on('click', e => {
            $('.profilePage #btn-update-password-user-modal i.fa-spinner').show()
            const id = $('.profilePage #update-password-user-modal').attr('data-user')
            const old_password = $('.profilePage #update-password-user-modal .modal-body #old_password').val()
            const new_password = $('.profilePage #update-password-user-modal .modal-body #new_password').val()
            const re_password = $('.profilePage #update-password-user-modal .modal-body #re_password').val()

            const query = {
                old_password,
                new_password,
                re_password
            }

            fetch(`./api/users/password/${id}`, {
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(query)
            }).then(res => res.text())
            .then(data => {
                data = JSON.parse(data)

                if (data.status) {
                    $('.profilePage #btn-update-password-user-modal i.fa-spinner').hide()

                    $('.profilePage #update-password-user-modal .modal-body #old_password').val("")
                    $('.profilePage #update-password-user-modal .modal-body #new_password').val("")
                    $('.profilePage #update-password-user-modal .modal-body #re_password').val("")

                    $('.profilePage #update-password-user-modal').modal('hide')
                    $('.messsageAlertPage #message-alert-show .content').html(data.message)
                    $('.messsageAlertPage #message-alert-show').fadeIn();

                    setTimeout(() => {
                        $('.messsageAlertPage #message-alert-show').fadeOut();
                    },1000)
                }
                else {
                    $('.profilePage #btn-update-password-user-modal i.fa-spinner').hide()
                    $('.messsageAlertPage #message-alert-show .content').html(data.error)
                    $('.messsageAlertPage #message-alert-show').fadeIn();

                    setTimeout(() => {
                        $('.messsageAlertPage #message-alert-show').fadeOut();
                    },3000)
                }
            }).catch(e => {
                $('.profilePage #btn-update-password-user-modal i.fa-spinner').hide()
                $('.messsageAlertPage #message-alert-show .content').html(e.message)
                $('.messsageAlertPage #message-alert-show').fadeIn();

                setTimeout(() => {
                    $('.messsageAlertPage #message-alert-show').fadeOut();
                },3000)
            })
        })

        $('.profilePage #btn-update-avatar-user-admin-modal').on('click', e => {

            $('.profilePage #btn-update-avatar-user-admin-modal i.fa-spinner').show()

            const id =  $('.profilePage #update-avatar-user-admin-modal').attr('data-user')
            const image = $('.profilePage .show-image-upload .edit-review-upload-block img').attr('src')

            const query = {
            image
            }


            fetch(`./api/users/image/${id}`,{
                method: 'PUT',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify(query)
            }).then(res => res.text())
            .then(data => {
                data = JSON.parse(data)
                if (data.status) {
                $('.profilePage #btn-update-avatar-user-admin-modal i.fa-spinner').hide()
                $('.profilePage #profile .account-settings .user-profile .user-avatar img').attr('src', data.image)
                $('.profilePage #update-avatar-user-admin-modal').modal('hide')
                $('.profilePage .show-image-upload').html("")

                $('.messsageAlertPage #message-alert-show .content').html(data.message)
                $('.messsageAlertPage #message-alert-show').fadeIn();

                setTimeout(() => {
                    $('.messsageAlertPage #message-alert-show').fadeOut();
                },700)
                }
                else {
                $('.profilePage #btn-update-avatar-user-admin-modal i.fa-spinner').hide()
                $('.messsageAlertPage #message-alert-show .content').html(data.error)
                $('.messsageAlertPage #message-alert-show').fadeIn();

                setTimeout(() => {
                    $('.messsageAlertPage #message-alert-show').fadeOut();
                },3000)
                }
            }).catch(e => {
            $('.profilePage #btn-update-avatar-user-admin-modal i.fa-spinner').hide()
            $('.messsageAlertPage #message-alert-show .content').html(e.message)
            $('.messsageAlertPage #message-alert-show').fadeIn();

            setTimeout(() => {
                $('.messsageAlertPage #message-alert-show').fadeOut();
            },3000)
            })
        })
