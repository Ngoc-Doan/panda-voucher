<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8" />
  <link rel="apple-touch-icon" sizes="76x76" href="../assets/img/apple-icon.png">
  <link rel="icon" type="image/png" href="../assets/img/favicon.png">
  <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
  <title>
    Admin add voucher | Pandas Voucher
  </title>
  <meta content='width=device-width, initial-scale=1.0, shrink-to-fit=no' name='viewport' />
  <%- include ../component/admin/cdn.ejs %>
  <style>
    .addProductAdmin #option-category,.addProductAdmin #option-brand {
      color: #AAAAAA;
      height: 36px;
      padding-left: 0;
      padding-right: 0;
      border-radius: 0;
      font-size: 14px;
      background-size: 0 100%, 100% 100%;
      border: 0;
      background-image: linear-gradient(to top, #9c27b0 2px, rgba(156, 39, 176, 0) 2px), linear-gradient(to top, #d2d2d2 1px, rgba(210, 210, 210, 0) 1px);
    }
    .addProductAdmin #option-category:focus, .addProductAdmin #option-brand:focus {
      background-size: 100% 100%, 100% 100%;
      transition-duration: 0.3s;
      box-shadow: none;
    }
    .addProductAdmin #expired .is-focused .bmd-label-floating {
      display: block !important;
    }
    .addProductAdmin .show-image-upload .edit-review-upload-block img.edit-review-upload {
      width: 200px;
      height: 200px;
    }
    .addProductAdmin .show-image-upload .edit-review-upload-block {
      display:inline-block;
      margin:5px 20px;
      padding:5px;
      border:1px solid #CCC;
    }
    .addProductAdmin .show-image-upload {
      width: 100%;
      text-align:center;
    }
    .addProductAdmin .cancel-review-img-upload {
      cursor: pointer;
    }
    .addProductAdmin .label-for-img-upload-input {
      display: inline-block;
      background-color: #A13BB6;
      color: white;
      padding: 0.5rem;
      font-family: sans-serif;
      border-radius: 0.3rem;
      cursor: pointer;
      margin-top: 1rem;
    }
    .addProductAdmin #show-message-delay-add-new-product {
      display: none;
    }
    .addProductAdmin .loading-add-new-product {
      display: flex;
      flex-direction: row;
      flex-wrap: nowrap;
      align-content: center;
      justify-content: space-around;
    }
    .addProductAdmin .loading-add-new-product .loader,
    .addProductAdmin .loading-add-new-product .loader .bar {
      width: 60px;
      height: 20px;
    }
    .addProductAdmin .loading-add-new-product .loader .bar {
      position: absolute;
      display: flex;
      align-items: center;
    }
    .addProductAdmin .loading-add-new-product .loader .bar::before,
    .addProductAdmin .loading-add-new-product .loader .bar::after {
      content: "";
      position: absolute;
      display: block;
      width: 10px;
      height: 10px;
      background: #9c27b0;
      background: #9c27b0;
      opacity: 0;
      box-shadow: 1px 1px 4px rgba(0,0,0,.15);
      border-radius: 10px;
      animation: slideleft 2s ease-in-out infinite;
    }

    .addProductAdmin .loading-add-new-product .loader .bar1::before { animation-delay: 0.00s }
    .addProductAdmin .loading-add-new-product .loader .bar1::after  { animation-delay: 0.3s }
    .addProductAdmin .loading-add-new-product .loader .bar2::before { animation-delay: 0.60s }
    .addProductAdmin .loading-add-new-product .loader .bar2::after  { animation-delay: 0.90s }
    .addProductAdmin .loading-add-new-product .loader .bar3::before { animation-delay: 1.20s }
    .addProductAdmin .loading-add-new-product .loader .bar3::after  { animation-delay: 1.50s }

    @keyframes slideleft {
      10% { opacity: 0; transform: scale(0); right: 0 }
      50% { opacity: 1; transform: scale(1) }
      90% { opacity: 0; transform: scale(0); right: 100% }
    }
  </style>
</head>

<body class="addProductAdmin">
  <div class="wrapper ">
    <%- include ../component/admin/sidebar.ejs %>
    <div class="main-panel">
      <!-- Navbar -->
      <%- include ../component/admin/narbar.ejs %>
      <!-- End Navbar -->
      <div class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header card-header-primary">
                  <h4 class="card-title">Thêm sản phẩm mới</h4>
                  <p class="card-category">Thêm voucher vào shop</p>
                </div>
                <div class="card-body">
                  <form>
                    <div class="row">
                      <div class="col-md-5">
                        <div class="form-group">
                          <label class="bmd-label-floating">Tên sản phẩm</label>
                          <input type="text" class="form-control" id="name-product">
                        </div>
                      </div>
                      <div class="col-md-3">
                        <div class="form-group">
                          <label class="bmd-label-floating">Giá tiền</label>
                          <input type="number" class="form-control" id="price-product">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <select id="option-brand" style="width: 100%;">
                            <option value="">Thương hiệu</option>
                            <% brands.forEach(b => { %>
                              <option value="<%= b._id %>"><%= b.name %></option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-4">
                        <div class="form-group">
                          <select id="option-category" style="width: 100%;">
                            <option value="">Phân loại</option>
                            <% categories.forEach(c => { %>
                              <option value="<%= c._id %>"><%= c.name %></option>
                            <% }) %>
                          </select>
                        </div>
                      </div>
                      <div class="col-md-4" id="expired">
                        <div class="form-group">
                          <label class="bmd-label-floating" style="display: none;">Ngày hết hạn</label>
                          <input type="date" class="form-control" style="color: #AAAAAA;" id="expiration-date-product">
                        </div>
                      </div>
                      <div class="col-md-4">
                        <div class="form-group">
                          <label class="bmd-label-floating" style="width: 100%; margin-top: 8px;">
                            <span>Còn hàng</span>
                            <div class="form-check" style="width: 0%; float: right; margin-top: -14px; margin-right: 130px;">
                              <label class="form-check-label">
                                <input class="form-check-input" type="checkbox" value="" id="availability-product">
                                <span class="form-check-sign">
                                  <span class="check"></span>
                                </span>
                              </label>
                            </div>
                          </label>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label>Giới thiệu sản phẩm</label>
                          <div class="form-group">
                            <label class="bmd-label-floating"> Mô tả về sản phẩm...</label>
                            <textarea class="form-control" rows="5" id="description-product"></textarea>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-md-12">
                        <div class="form-group">
                          <label class="bmd-label-floating">Hình ảnh</label>
                          <div>
                            <input type="file" id="img-upload-input" multiple hidden accept=".jpg, .jpeg, .png" onchange="readURL(this)" style="opacity: 1; position: initial;"/>
                            <label for="img-upload-input" class="label-for-img-upload-input">Chọn hình ảnh sản phẩm</label>
                          </div>
                        </div>
                        <div class="show-image-upload">
                        </div>
                      </div>
                    </div>
                    <div class="row" id="show-message-delay-add-new-product">
                      <div class="col-md-12 loading-add-new-product">
                        <label style="font-size:25px;">Đang tải dữ liệu sản phẩm</label>
                      </div>
                      <div class="col-md-12 loading-add-new-product">
                        <div class="loader">
                          <div class="bar bar1"></div>
                          <div class="bar bar2"></div>
                          <div class="bar bar3"></div>
                        </div>
                      </div>
                    </div>
                    <button type="button" class="btn btn-primary pull-right btn-add-new-product">Thêm sản phẩm</button>
                    <div class="clearfix"></div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include ../component/admin/footer.ejs %>
    </div>
  </div>
  <%- include ../component/admin/fixed-plugin.ejs %>

  <%- include ../component/message-alert.ejs %>

  <%- include ../component/admin/scripts-fixed-plugin.ejs %>
</body>
<script>
  function readURL(input) {
    if (input.files) {
      var filesAmount = input.files.length

      for (var i = 0; i < filesAmount; i++) {
        var reader = new FileReader();

        reader.onload = (event) => {
          $('.addProductAdmin .show-image-upload').append(`
          <div class="edit-review-upload-block">
            <i class="material-icons cancel-review-img-upload" onclick="removeImg(this)">close</i>
            <img src="${event.target.result}" class="edit-review-upload">
          </div>
          `)
        }
        reader.readAsDataURL(input.files[i]);
      }
    }
  }

  function removeImg(element) {
    element.parentNode.remove()
    $('#img-upload-input').val("")
  }

  $(document).ready(function() {
    $('.addProductAdmin .btn-add-new-product').on('click', e => {

      $('.addProductAdmin #show-message-delay-add-new-product').show()

      const arrayImg = $('.addProductAdmin .show-image-upload').find('.edit-review-upload-block img')
      const arrayImgLength = arrayImg.length
      const arrayBase64 = []
      for (var i = 0; i < arrayImgLength; i++) {
        arrayBase64.push(arrayImg[i].src)

      }
      
      const name = document.querySelector('#name-product').value
      const price = document.querySelector('#price-product').value
      const brand = document.getElementById('option-brand').value
      const category = document.getElementById('option-category').value
      const expirationDate = document.querySelector('#expiration-date-product').value
      const availability = document.querySelector('#availability-product').checked
      const descTemp = document.getElementById('description-product').value

      const desc = descTemp.split("\n")

      // console.log(`${name} - ${price} - ${brand} - ${category} - ${expirationDate} - ${validation} - ${desc} - ${arrayBase64.length}`)
      const query = {
        name,
        price,
        brand,
        category,
        expirationDate: new Date(expirationDate),
        availability,
        desc,
        image: arrayBase64
      }
      fetch('../admin/api/vouchers', {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json'
        },
        body: JSON.stringify(query)
      }).then(res => res.text())
      .then(data => {
        data = JSON.parse(data)
        if (data.status) {

          $('.messsageAlertPage #message-alert-show .content').html(data.message)
          $('.messsageAlertPage #message-alert-show').fadeIn();

          setTimeout(() => {
              $('.messsageAlertPage #message-alert-show').fadeOut();
          },3000)

          $('.addProductAdmin .show-image-upload').html("")
          document.querySelector('#name-product').value = ""
          document.querySelector('#price-product').value = ""
          document.getElementById('option-brand').value = ""
          document.getElementById('option-category').value = ""
          document.querySelector('#expiration-date-product').value = ""
          document.getElementById('description-product').value = ""

        }
        else {
          $('.messsageAlertPage #message-alert-show .content').html(data.error)
          $('.messsageAlertPage #message-alert-show').fadeIn();

          setTimeout(() => {
              $('.messsageAlertPage #message-alert-show').fadeOut();
          },3000)
        }
        $('.addProductAdmin #show-message-delay-add-new-product').hide()
      })
      .catch(e => {
        $('.messsageAlertPage #message-alert-show .content').html(e.message)
        $('.messsageAlertPage #message-alert-show').fadeIn();

        setTimeout(() => {
            $('.messsageAlertPage #message-alert-show').fadeOut();
        },3000)
        
        $('.addProductAdmin #show-message-delay-add-new-product').hide()
      })

    })
  })
</script>
</html>